<div class="message my-3" {{#id}}data-messageid="{{id}}"{{/id}} {{#turn_id}}data-turn-id="{{turn_id}}"{{/turn_id}} {{#parentid}}data-parentid="{{parentid}}"{{/parentid}} data-role="user">
    <div class="d-flex justify-content-end">
        <div class="border rounded p-3 bg-primary text-white position-relative" style="max-width: 80%; border-right: 4px solid #0056b3 !important;">
            {{#turn_id}}
                <div class="position-absolute" style="top: -8px; right: 10px;">
                    <span class="badge badge-light badge-sm" style="font-size: 0.7rem; padding: 0.2rem 0.4rem; color: #007bff;">
                        {{#turn_label}}{{turn_label}}{{/turn_label}}{{^turn_label}}T{{turn_id}}{{/turn_label}}
                    </span>
                </div>
            {{/turn_id}}
            <div class="content" style="margin-top: {{#turn_id}}0.5rem{{/turn_id}}{{^turn_id}}0{{/turn_id}};">
                {{{content}}}
            </div>
        </div>
    </div>
</div>

