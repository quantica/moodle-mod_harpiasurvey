{{!
    @template mod_harpiasurvey/page_view

    Template for viewing a page with rendered content.

    Context variables required for this template:
    * title - The page title
    * description - The rendered page description/content
    * editurl - URL to edit the page

    Example context (json):
    {
        "title": "Welcome to the experiment!",
        "description": "<p>Thank you for participating...</p>",
        "editurl": "/mod/harpiasurvey/view_experiment.php?id=1&experiment=1&page=1&edit=1"
    }
}}
<div class="page-view">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">{{title}}</h3>
        {{#canmanage}}
            <div class="d-flex gap-2">
                {{#has_editurl}}
                    <a href="{{editurl}}" class="btn btn-sm btn-outline-primary">
                        <i class="fa fa-edit" aria-hidden="true"></i> {{#str}}edit, moodle{{/str}}
                    </a>
                {{/has_editurl}}
                {{#has_deleteurl}}
                    <a href="{{deleteurl}}" 
                       class="btn btn-sm btn-outline-danger" 
                       title="{{#str}}delete, moodle{{/str}}"
                       onclick="return confirm('{{#str}}confirmdelete, core{{/str}}');">
                        <i class="fa fa-trash" aria-hidden="true"></i> {{#str}}delete, moodle{{/str}}
                    </a>
                {{/has_deleteurl}}
            </div>
        {{/canmanage}}
    </div>
    
    {{#has_description}}
        <div class="page-content mb-3">
            {{{description}}}
        </div>
    {{/has_description}}
    
    {{! AI Chat interface (rendered at page level, not as a question) - appears before questions }}
    {{#is_aichat_page}}
        {{#aichat.use_multi_model_tabs}}
            {{! Multi-model tabbed interface }}
            {{> mod_harpiasurvey/multi_model_chat }}
        {{/aichat.use_multi_model_tabs}}
        {{^aichat.use_multi_model_tabs}}
            {{! Single model or turns mode interface }}
            <div class="row">
                {{! Conversation tree sidebar (for turns mode and continuous mode) }}
                {{#aichat.show_sidebar}}
                    <div class="col-md-3 conversation-tree-wrapper" id="conversation-tree-wrapper-{{pageid}}" style="min-width: 280px; max-width: 350px;">
                        {{> mod_harpiasurvey/conversation_tree }}
                    </div>
                {{/aichat.show_sidebar}}
                <div class="{{#aichat.show_sidebar}}col-md-9{{/aichat.show_sidebar}}{{^aichat.show_sidebar}}col-12{{/aichat.show_sidebar}}">
            <div class="ai-conversation-container mb-4 mt-4" data-cmid="{{cmid}}" data-pageid="{{pageid}}" data-behavior="{{aichat.behavior}}" {{#aichat.qa_active_id}}data-qa-active-id="{{aichat.qa_active_id}}"{{/aichat.qa_active_id}} {{#aichat.has_models}}data-models="{{#aichat.models}}{{id}}{{^@last}},{{/@last}}{{/aichat.models}}"{{/aichat.has_models}} {{#aichat.has_min_turns}}data-min-turns="{{aichat.min_turns}}"{{/aichat.has_min_turns}} {{#aichat.has_max_turns}}data-max-turns="{{aichat.max_turns}}"{{/aichat.has_max_turns}}>
            {{#aichat.has_turn_evaluation_questions}}
                <script type="application/json" id="turn-evaluation-questions-data-{{pageid}}">{{{aichat.turn_evaluation_questions_json}}}</script>
            {{/aichat.has_turn_evaluation_questions}}
            {{#aichat.has_models}}
                {{! Display model identifier(s) above chat window }}
                <div class="mb-2">
                    <small class="text-muted">
                        <strong>{{#str}}aimodels, mod_harpiasurvey{{/str}}:</strong>
                        {{#aichat.models}}{{model}}{{^@last}}, {{/@last}}{{/aichat.models}}
                    </small>
                </div>
            {{/aichat.has_models}}
            {{^aichat.has_models}}
                {{! No models available message }}
                <div class="alert alert-warning mb-2">
                    <small>{{#str}}nomodelsavailable, mod_harpiasurvey{{/str}}</small>
                </div>
            {{/aichat.has_models}}
            
            {{! Turn navigation controls (only for turns mode) }}
            {{#aichat.is_turns_mode}}
                <div class="turn-navigation mb-2 d-flex justify-content-between align-items-center">
                    <div class="turn-info d-flex align-items-center gap-2">
                        <button type="button" class="btn btn-sm btn-outline-info toggle-tree-btn" data-pageid="{{pageid}}" title="{{#str}}showconversationtree, mod_harpiasurvey{{/str}}">
                            <i class="fa fa-sitemap" aria-hidden="true"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary toggle-previous-messages-btn" data-pageid="{{pageid}}" title="{{#str}}togglepreviousmessages, mod_harpiasurvey{{/str}}">
                            <i class="fa fa-history" aria-hidden="true"></i> {{#str}}showprevious, mod_harpiasurvey{{/str}}
                        </button>
                        <span class="badge badge-info" id="current-turn-badge-{{pageid}}">
                            <span id="current-turn-number-{{pageid}}">Turno 1</span>
                        </span>
                    </div>
                </div>
            {{/aichat.is_turns_mode}}
            
            
            {{! Q&A history list }}
            {{#aichat.is_qa_mode}}
                <div class="qa-questions-list mb-2" data-pageid="{{pageid}}">
                    {{#aichat.has_qa_questions}}
                        {{#aichat.qa_questions}}
                            <button type="button"
                                    class="btn btn-sm btn-outline-secondary qa-question-item{{#is_active}} active{{/is_active}}"
                                    data-pageid="{{pageid}}"
                                    data-question-id="{{id}}"
                                    title="{{title}}">
                                {{preview}}
                            </button>
                        {{/aichat.qa_questions}}
                    {{/aichat.has_qa_questions}}
                </div>
            {{/aichat.is_qa_mode}}

            {{! Chat messages area }}
            <div class="chat-messages border rounded p-3 mb-2" id="chat-messages-page-{{pageid}}" style="max-height: 600px; overflow-y: auto; background-color: #f8f9fa;">
                {{#aichat.has_history}}
                    {{#aichat.conversation_history}}
                        {{#role.user}}
                            {{> mod_harpiasurvey/chat_user_message }}
                        {{/role.user}}
                        {{#role.assistant}}
                            {{> mod_harpiasurvey/chat_ai_message }}
                        {{/role.assistant}}
                    {{/aichat.conversation_history}}
                {{/aichat.has_history}}
                {{^aichat.has_history}}
                    <div class="text-muted text-center small py-3">
                        {{#aichat.is_qa_mode}}
                            {{#str}}qaplaceholder, mod_harpiasurvey{{/str}}
                        {{/aichat.is_qa_mode}}
                        {{^aichat.is_qa_mode}}
                            {{#str}}aiconversationplaceholder, mod_harpiasurvey{{/str}}
                        {{/aichat.is_qa_mode}}
                    </div>
                {{/aichat.has_history}}
            </div>
            
            
            {{! Input area }}
            <div class="input-group">
                <textarea class="form-control chat-input" id="chat-input-page-{{pageid}}" rows="2" placeholder="{{#str}}typeyourmessage, mod_harpiasurvey{{/str}}"></textarea>
                <button class="btn btn-primary chat-send-btn" type="button" data-cmid="{{cmid}}" data-pageid="{{pageid}}">
                    <i class="fa fa-arrow-up"></i>
                </button>
            </div>
            {{#aichat.is_qa_mode}}
                <div class="mt-2 d-flex justify-content-end">
                    <button type="button" class="btn btn-outline-secondary btn-sm new-question-btn" data-pageid="{{pageid}}">
                        {{#str}}newquestion, mod_harpiasurvey{{/str}}
                    </button>
                </div>
            {{/aichat.is_qa_mode}}
            {{#aichat.is_turns_mode}}
                <div class="mt-2 text-muted small" id="turn-locked-message-{{pageid}}" style="display: none;">
                    <i class="fa fa-lock"></i> {{#str}}turnlocked, mod_harpiasurvey{{/str}}
                </div>
                <div class="mt-2" id="direct-branch-container-{{pageid}}" style="display: none;">
                    <button type="button" class="btn btn-sm btn-success create-direct-branch-btn" data-pageid="{{pageid}}" data-cmid="{{cmid}}">
                        <i class="fa fa-code-branch" aria-hidden="true"></i> {{#str}}createdirectbranch, mod_harpiasurvey{{/str}}
                    </button>
                </div>
            {{/aichat.is_turns_mode}}
            
            {{! Loading indicator (hidden by default) }}
            <div class="chat-loading mt-2" id="chat-loading-page-{{pageid}}" style="display: none;">
                {{> mod_harpiasurvey/chat_loading }}
            </div>
            
            {{! Turn evaluation questions container (for turns mode) - appears below chat }}
            {{#aichat.is_turns_mode}}
                <div class="turn-evaluation-questions-container mt-4" id="turn-evaluation-questions-container-{{pageid}}">
                    {{! Questions will be dynamically loaded here based on current turn }}
                </div>
            {{/aichat.is_turns_mode}}
            </div>
        </div>
    </div>
        {{/aichat.use_multi_model_tabs}}
    {{/is_aichat_page}}
    
    {{#has_questions}}
        <div class="page-questions mt-4">
            {{#questions}}
                <div class="question-item mb-4" data-questionid="{{id}}" data-questiontype="{{type}}">
                    <h5>{{name}}</h5>
                    <div class="question-description mb-2">
                        {{{description}}}
                    </div>
                    
                    {{#has_options}}
                        {{#is_select}}
                            {{! Select dropdown }}
                            <select class="form-control" name="question_{{id}}" id="question_{{id}}" {{#has_saved_response}}data-saved-value="{{saved_response}}"{{/has_saved_response}}>
                                <option value="">{{#str}}noselection, mod_harpiasurvey{{/str}}</option>
                                {{#options}}
                                    <option value="{{id}}" {{#isdefault}}selected{{/isdefault}}>{{value}}</option>
                                {{/options}}
                            </select>
                        {{/is_select}}
                        {{^is_select}}
                            {{#is_likert}}
                                {{! Likert scale - horizontal layout }}
                                <div class="likert-scale d-flex justify-content-between align-items-center">
                                    {{#options}}
                                        <div class="likert-option text-center">
                                            <input class="form-check-input" type="radio" 
                                                   name="{{nameattr}}" id="option_{{id}}" value="{{id}}" {{#isdefault}}checked{{/isdefault}}>
                                            <label class="form-check-label d-block mt-1" for="option_{{id}}">
                                                {{value}}
                                            </label>
                                        </div>
                                    {{/options}}
                                </div>
                            {{/is_likert}}
                            {{^is_likert}}
                                {{! Regular radio/checkbox options }}
                                <div class="question-options">
                                    {{#options}}
                                        <div class="form-check">
                                            <input class="form-check-input" type="{{inputtype}}" 
                                                   name="{{nameattr}}" id="option_{{id}}" value="{{id}}" {{#isdefault}}checked{{/isdefault}}>
                                            <label class="form-check-label" for="option_{{id}}">
                                                {{value}}
                                            </label>
                                        </div>
                                    {{/options}}
                                </div>
                            {{/is_likert}}
                        {{/is_select}}
                    {{/has_options}}
                    {{^has_options}}
                        {{#is_number}}
                            {{! Number input with settings }}
                            <input type="number" class="form-control" name="question_{{id}}" id="question_{{id}}"
                                   {{#numbersettings.has_min}}min="{{numbersettings.min_value}}"{{/numbersettings.has_min}}
                                   {{#numbersettings.has_max}}max="{{numbersettings.max_value}}"{{/numbersettings.has_max}}
                                   {{#numbersettings.step}}step="{{numbersettings.step}}"{{/numbersettings.step}}
                                   {{#has_saved_response}}value="{{saved_response}}"{{/has_saved_response}}{{^has_saved_response}}{{#numbersettings.default}}value="{{numbersettings.default}}"{{/numbersettings.default}}{{/has_saved_response}}>
                        {{/is_number}}
                        {{#is_shorttext}}
                            <input type="text" class="form-control" name="question_{{id}}" id="question_{{id}}" {{#has_saved_response}}value="{{saved_response}}"{{/has_saved_response}}>
                        {{/is_shorttext}}
                        {{#is_longtext}}
                            <textarea class="form-control" name="question_{{id}}" id="question_{{id}}" rows="4">{{#has_saved_response}}{{saved_response}}{{/has_saved_response}}</textarea>
                        {{/is_longtext}}
                    {{/has_options}}
                    
                    {{! Saved response message for each question }}
                    {{#has_saved_response}}
                        <div class="mt-2 small text-muted saved-response-message" data-questionid="{{id}}">
                            <i class="fa fa-check-circle" aria-hidden="true"></i> {{#str}}saved, mod_harpiasurvey{{/str}} {{#str}}on, mod_harpiasurvey{{/str}} {{saved_datetime}}
                        </div>
                    {{/has_saved_response}}
                </div>
            {{/questions}}
            
            {{! Single save button at the end of all questions (only show if there are questions) }}
            {{#has_non_aiconversation_questions}}
                <div class="mt-4 text-center">
                    <button type="button" class="btn btn-primary btn-lg save-all-responses-btn" 
                            data-cmid="{{cmid}}"
                            data-pageid="{{pageid}}">
                        {{#str}}save, mod_harpiasurvey{{/str}}
                    </button>
                    <div class="mt-2 save-all-status" style="display: none;"></div>
                </div>
            {{/has_non_aiconversation_questions}}
        </div>
    {{/has_questions}}
    
    {{! Pagination navigation }}
    {{#has_pagination}}
        <nav aria-label="Page navigation" class="mt-4" data-navigation-mode="{{navigation_mode}}" data-canmanage="{{can_navigate}}">
            <ul class="pagination justify-content-center">
                {{#pagination.has_prev}}
                    <li class="page-item">
                        <a class="page-link" href="{{pagination.prev_url}}" aria-label="Previous">
                            <span aria-hidden="true">&laquo; {{#str}}previous, moodle{{/str}}</span>
                        </a>
                    </li>
                {{/pagination.has_prev}}
                {{^pagination.has_prev}}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&laquo; {{#str}}previous, moodle{{/str}}</span>
                        </span>
                    </li>
                {{/pagination.has_prev}}
                
                {{#pagination.pages}}
                    <li class="page-item{{#is_current}} active{{/is_current}}{{^is_current}}{{#is_only_forward}} disabled{{/is_only_forward}}{{/is_current}}">
                        {{#is_current}}
                            <a class="page-link" href="{{url}}">{{number}}</a>
                        {{/is_current}}
                        {{^is_current}}
                            {{#is_only_forward}}
                                <span class="page-link">{{number}}</span>
                            {{/is_only_forward}}
                            {{^is_only_forward}}
                        <a class="page-link" href="{{url}}">{{number}}</a>
                            {{/is_only_forward}}
                        {{/is_current}}
                    </li>
                {{/pagination.pages}}
                
                {{#pagination.has_next}}
                    <li class="page-item">
                        <a class="page-link navigation-next-link" href="{{pagination.next_url}}" aria-label="Next" data-pageid="{{pageid}}">
                            <span aria-hidden="true">{{#str}}next, moodle{{/str}} &raquo;</span>
                        </a>
                    </li>
                {{/pagination.has_next}}
                {{^pagination.has_next}}
                    <li class="page-item disabled">
                        <span class="page-link" aria-label="Next">
                            <span aria-hidden="true">{{#str}}next, moodle{{/str}} &raquo;</span>
                        </span>
                    </li>
                {{/pagination.has_next}}
            </ul>
        </nav>
    {{/has_pagination}}
    
    {{#has_subpages}}
        <div class="subpages-container mt-4" id="subpages-container-{{pageid}}">
            {{#subpages}}
                <div class="subpage-item mb-4 border rounded p-3" 
                     data-subpage-id="{{id}}"
                     data-visibility-type="{{turn_visibility_type}}"
                     {{#turn_number}}data-turn-number="{{turn_number}}"{{/turn_number}}
                     style="display: none;">
                    <h5>{{title}}</h5>
                    {{#has_description}}
                        <div class="subpage-description mb-3">
                            {{{description}}}
                        </div>
                    {{/has_description}}
                    {{#has_questions}}
                        <div class="subpage-questions">
                            {{#questions}}
                                <div class="question-item mb-4" 
                                     data-questionid="{{id}}" 
                                     data-questiontype="{{type}}"
                                     data-visibility-type="{{turn_visibility_type}}"
                                     {{#turn_number}}data-turn-number="{{turn_number}}"{{/turn_number}}
                                     style="display: none;">
                                    <h5>{{name}}</h5>
                                    <div class="question-description mb-2">
                                        {{{description}}}
                                    </div>
                                    
                                    {{#has_options}}
                                        {{#is_select}}
                                            <select class="form-control" name="question_{{id}}" id="question_{{id}}" {{#has_saved_response}}data-saved-value="{{saved_response}}"{{/has_saved_response}}>
                                                <option value="">{{#str}}noselection, mod_harpiasurvey{{/str}}</option>
                                                {{#options}}
                                                    <option value="{{id}}" {{#isdefault}}selected{{/isdefault}}>{{value}}</option>
                                                {{/options}}
                                            </select>
                                        {{/is_select}}
                                        {{^is_select}}
                                            {{#is_likert}}
                                                <div class="likert-scale d-flex justify-content-between align-items-center">
                                                    {{#options}}
                                                        <div class="likert-option text-center">
                                                            <input class="form-check-input" type="radio" 
                                                                   name="question_{{id}}" id="option_{{id}}" value="{{id}}" {{#isdefault}}checked{{/isdefault}}>
                                                            <label class="form-check-label d-block mt-1" for="option_{{id}}">
                                                                {{value}}
                                                            </label>
                                                        </div>
                                                    {{/options}}
                                                </div>
                                            {{/is_likert}}
                                            {{^is_likert}}
                                                <div class="question-options">
                                                    {{#options}}
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="{{input_type}}" 
                                                                   name="question_{{id}}" id="option_{{id}}" value="{{id}}" {{#isdefault}}checked{{/isdefault}}>
                                                            <label class="form-check-label" for="option_{{id}}">
                                                                {{value}}
                                                            </label>
                                                        </div>
                                                    {{/options}}
                                                </div>
                                            {{/is_likert}}
                                        {{/is_select}}
                                    {{/has_options}}
                                    {{^has_options}}
                                        {{#is_number}}
                                            <input type="number" class="form-control" name="question_{{id}}" id="question_{{id}}"
                                                   {{#has_saved_response}}value="{{saved_response}}"{{/has_saved_response}}>
                                        {{/is_number}}
                                        {{#is_shorttext}}
                                            <input type="text" class="form-control" name="question_{{id}}" id="question_{{id}}" {{#has_saved_response}}value="{{saved_response}}"{{/has_saved_response}}>
                                        {{/is_shorttext}}
                                        {{#is_longtext}}
                                            <textarea class="form-control" name="question_{{id}}" id="question_{{id}}" rows="4">{{#has_saved_response}}{{saved_response}}{{/has_saved_response}}</textarea>
                                        {{/is_longtext}}
                                    {{/has_options}}
                                    
                                    {{#has_saved_response}}
                                        <div class="mt-2 small text-muted saved-response-message" data-questionid="{{id}}">
                                            <i class="fa fa-check-circle" aria-hidden="true"></i> {{#str}}saved, mod_harpiasurvey{{/str}}
                                        </div>
                                    {{/has_saved_response}}
                                </div>
                            {{/questions}}
                        </div>
                    {{/has_questions}}
                </div>
            {{/subpages}}
        </div>
    {{/has_subpages}}
</div>
