{{!
    @template mod_harpiasurvey/conversation_tree

    Template for conversation tree sidebar showing all conversation branches.

    Context variables required for this template:
    * pageid - Page ID
    * cmid - Course module ID

    Example context (json):
    {
        "pageid": 1,
        "cmid": 1
    }
}}
<div class="conversation-tree-sidebar" id="conversation-tree-sidebar-{{pageid}}">
    <div class="card border-0 shadow-sm h-100 d-flex flex-column">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-2">
            <h6 class="mb-0 font-weight-bold">
                <i class="fa fa-comments" aria-hidden="true"></i> {{#str}}conversations, mod_harpiasurvey{{/str}}
            </h6>
            <button type="button" class="btn btn-sm btn-light close-tree-btn" data-pageid="{{pageid}}" aria-label="Close" title="{{#str}}close, core{{/str}}">
                <i class="fa fa-times" aria-hidden="true"></i>
            </button>
        </div>
        <div class="card-body p-3 flex-grow-1" style="overflow-y: auto; min-height: 0;">
            <div class="conversation-tree" id="conversation-tree-{{pageid}}">
                <div class="text-center py-4">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="sr-only">{{#str}}loading, moodle{{/str}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light border-top py-2">
            <button type="button" class="btn btn-sm btn-success btn-block create-root-btn font-weight-bold mb-2" data-pageid="{{pageid}}" data-cmid="{{cmid}}">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> {{#str}}newconversation, mod_harpiasurvey{{/str}}
            </button>
            <button type="button" class="btn btn-sm btn-outline-primary btn-block export-conversation-btn" data-pageid="{{pageid}}" data-cmid="{{cmid}}" title="{{#str}}exportconversation, mod_harpiasurvey{{/str}}">
                <i class="fa fa-download" aria-hidden="true"></i> {{#str}}exportconversation, mod_harpiasurvey{{/str}}
            </button>
        </div>
    </div>
</div>
